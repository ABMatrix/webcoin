{
  "name": "webcoin",
  "version": "0.0.1",
  "description": "Bitcoin client in the browser",
  "main": "index.js",
  "scripts": {
    "test": "npm run standard && ./node_modules/.bin/tape test/*.js",
    "build": "./node_modules/.bin/browserify -r ./index.js -s Webcoin > webcoin.js && cat webcoin.js | uglifyjs -c -m > webcoin.min.js",
    "standard": "./node_modules/.bin/standard lib/*.js"
  },
  "bin": {
    "webcoin-bridge": "./bin/bridge.js"
  },
  "keywords": [
    "bitcoin",
    "client",
    "spv",
    "cryptocurrency",
    "p2p"
  ],
  "author": "Matt Bell <mappum@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "async": "^0.9.0",
    "bitcoin": "^2.3.0",
    "bitcore": "^0.12.3",
    "bitcore-p2p": "^0.14.0",
    "browserify-buffertools": "^1.0.2",
    "buffertools": "^2.1.2",
    "level-js": "^2.1.6",
    "leveldown": "^1.0.2",
    "levelup": "^0.19.0",
    "mkdirp": "^0.5.0",
    "peerhub": "^0.1.0",
    "setimmediate": "^1.0.2"
  },
  "devDependencies": {
    "browserify": "^10.0.0",
    "standard": "^3.7.2",
    "tape": "^4.0.0",
    "uglify-js": "^2.4.20"
  },
  "browser": {
    "buffertools": "browserify-buffertools"
  },
  "optionalDependencies": {
    "wrtc": "0.0.55"
  }
}
